<li>
  <span class="content"><%= Rinku.auto_link(micropost.content, :all, 'target="_blank"').html_safe %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <% if current_user?(micropost.user) %>
    <%= link_to '<i class="icon-trash"></i>'.html_safe, micropost, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: micropost.content %>
  <% end %>
</li>