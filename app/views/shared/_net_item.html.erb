<li id="<%= net_item.id %>">
    <%= link_to gravatar_for(net_item.user), net_item.user, size: 52 %>
    <span class="user">
        <%= link_to net_item.user.name, net_item.user %>
    </span>
    <span class="content"><%= Rinku.auto_link(net_item.content, :all, 'target="_blank"').html_safe %></span>
    <span class="timestamp">
        Posted <%= time_ago_in_words(net_item.created_at) %> ago.
    </span>
    <% if current_user?(net_item.user) %>
    <%= link_to "<i class='icon-trash'></i>".html_safe, net_item, method: :delete,
        data: { confirm: "You sure?" },
        title: net_item.content %>
    <% end %>
</li>